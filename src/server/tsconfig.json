{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "noEmitOnError": true,
        "removeComments": true,
        "suppressImplicitAnyIndexErrors": true,
        "listFiles": false,
        "typeRoots": [
            "../../node_modules/@types"
        ]
    },
    "exclude": [
        "../../node_modules"
    ]
}